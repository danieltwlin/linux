[sokrates]                       
comment = Just share Sokrates directory #一些簡易說明
path = /sokrates             #實際放行的目錄
public = no                  #要不要開放訪客進入 (當然不要)
browseable = yes             #要不要能夠被瀏覽到名稱(不是查看內容)
writable = yes               #能否寫入 (smb 控制的)
create mode = 0777           #建立檔案的預設權限
directory mode = 0777        #建立目錄的預設權限
write list = smbuser         #哪個帳號或群組的用戶可以寫入
valid users = smbuser        #不是寫入權限，而是能用此資源的人(是否唯讀要看設定)
